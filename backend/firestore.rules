rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Orders collection - Public read (for dashboard), Backend writes only
    match /orders/{document=**} {
      // Allow anyone to read (dashboard)
      allow read: if true;
      
      // Only allow writes from authenticated backend
      // For now, allow all writes (use authentication in production)
      allow write: if request.auth != null || true;
      
      // Prevent updates to specific fields
      allow update: if !request.resource.data.diff(resource.data).affectedKeys()
        .hasAny(['createdAt']);
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
